#include <stdio.h>
#include <string.h>

// Структура, представляющая студента
struct student {
char name[50];
int age;
char group[10];
};

// Функция для поиска совпадений по заданному параметру
void find_students(struct student students[], int size, char *search_param, char *param_name) {
int found = 0; // Флаг, указывающий, были ли найдены совпадения
printf("Студенты, соответствующие параметру '%s' = '%s':\n", param_name, search_param);

for (int i = 0; i < size; i++) {
if (strcmp(param_name, "name") == 0 && strcmp(students[i].name, search_param) == 0) {
printf("Имя: %s, Возраст: %d, Группа: %s\n", students[i].name, students[i].age, students[i].group);
found = 1;
} else if (strcmp(param_name, "age") == 0 && students[i].age == atoi(search_param)) {
printf("Имя: %s, Возраст: %d, Группа: %s\n", students[i].name, students[i].age, students[i].group);
found = 1;
} else if (strcmp(param_name, "group") == 0 && strcmp(students[i].group, search_param) == 0) {
printf("Имя: %s, Возраст: %d, Группа: %s\n", students[i].name, students[i].age, students[i].group);
found = 1;
}
}

if (found == 0) {
printf("Совпадений не найдено.\n");
}
}

int main() {
// Создаем массив структур student
struct student students[] = {
{"Иван Иванов", 18, "ВВВ-1"},
{"Петр Петров", 19, "ВВВ-2"},
{"Мария Сидорова", 20, "ВВВ-1"},
{"Василий Петров", 21, "ВВВ-3"}
};

// Определяем размер массива
int size = sizeof(students) / sizeof(students[0]);

// Запрашиваем у пользователя параметр для поиска
char search_param[50];
char param_name[10];
printf("Введите имя параметра для поиска (name, age, group): ");
scanf("%s", param_name);
getchar(); // Очищаем буфер ввода

printf("Введите значение параметра: ");
fgets(search_param, sizeof(search_param), stdin);
search_param[strcspn(search_param, "\n")] = 0; // Удаляем символ новой строки

// Вызываем функцию для поиска совпадений
find_students(students, size, search_param, param_name);

return 0;
}
